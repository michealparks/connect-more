@import 'nib'

body:not(.in-game)
body.winner
  #gameboard-surface
    transform translate(0, 60px)

#gameboard-surface
  absolute bottom -80px left
  
  height 80px
  background-color #444
  transition transform 700ms 200ms $ease
  
  > div
    position absolute
    width 50%
    font-family Great Vibes
    text-align center
    color #ccc
    font-size 28px
    
  #btn-menu
    cursor pointer
    left 0
    height 80px
    line-height 80px
    
  #n-connect
    cursor default
    right 0
    height 50px
    line-height 60px
    margin 10px 0
    border-left 1px solid #ccc