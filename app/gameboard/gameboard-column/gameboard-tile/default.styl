@import 'nib';

.gameboard-tile
  position      relative
  color         blue
  background    #ddd
  
  .piece, .shadow
    position absolute
    border-radius 100%
  
  .piece
    absolute top left  
    margin-top -1000px
    
    &.p-0, &.p-1, &.p-2, &.p-3
      transform                 translateY(1000px)
      animation-name            bounce
      animation-duration        1000ms
      animation-iteration-count 1
      transform-origin          50%
      
    &.p-0
      background-color red
      
    &.p-1
      background-color blue
      
  .shadow
    absolute top 5px left 5px
    background-color #eee