.gameboard-tile
  position relative
  
  .piece, .shadow
    position absolute
    border-radius 100%
  
  .piece
    absolute top left  
    margin-top -1000px
    
    &.p-0, &.p-1, &.p-2, &.p-3
      transform                 translateY(1000px)
      animation-name            bounce
      animation-duration        1000ms
      animation-iteration-count 1
      transform-origin          50%
      
    &.p-0
      background-color $red
      border 7px solid lighten($red, 20%)
      
    &.p-1
      background-color $blue
      border 7px solid lighten($blue, 20%)
      
    &.p-2
      background-color $green
      border 7px solid lighten($green, 20%)
      
    &.p-3
      background-color $orange
      border 7px solid lighten($orange, 20%)
      
  .shadow
    absolute top 7px left 7px
    background-color #E3E3E3